<h1>{{title}}</h1>
<form id="create" action="/api/create" method="POST">

  <div class="row">

    <div class="col">
      <div>
        <label for="plant_name">Plant Name</label>
        <input type="text" id="plant_name" name="plant_name" placeholder="Aloe Flow">
      </div>

      <div>
        <label for="scientific_name">Scientific Name</label>
        <input type="text" id="scientific_name" name="scientific_name" placeholder="Echeveria">
      </div>

      <div>
        <label for="description">Description</label>
        <textarea type="text" id="description" name="description"
          placeholder="Hailing from South Africa, the..."></textarea>
      </div>

      <div>
        <h3>Prices</h3>
      </div>
      <div class="repeater" data-repeater>
        <div class="group">
          <div class="col">
            <div>
              <label for="prices[0][label]">Price Label</label>
              <input type="text" id="prices[0][label]" name="images[0][label]" placeholder="Small" class="half">
            </div>
            <div>
              <label for="prices[0][value]">Price Amount</label>
              <input type="text" id="prices[0][value]" name="images[0][value]" placeholder="4.99" class="half">
            </div>
          </div>
        </div>
      </div>

      <div>
        <label for="family">Family</label>
        <input type="text" id="family" name="family" placeholder="crassulaceae">
      </div>

      <div>
        <label for="image_url">Genus</label>
        <input type="text" id="genus" name="genus" placeholder="Gasteraloe">
      </div>

    </div>
    <div class="col">
      <div>
        <label for="categories">Categories</label>
        <input type="text" id="categories" name="categories" data-tag-picker placeholder="Category 1, Category 2">
      </div>

      <div>
        <label for="care">Care</label>
        <input type="text" id="care" name="care" placeholder="bright full sun, partial shade">
      </div>

      <div>
        <h3>Images</h3>
      </div>
      <div class="repeater" data-repeater="image">
        <div class="group">
          <div class="col">
            <div class="img-wrap">
              <img src="http://placehold.it/100x100" alt="">
            </div>
          </div>
          <div class="col">
            <div>
              <label for="images[0][src]">Image URL</label>
              <input type="text" id="images[0][src]" name="images[0][src]"
                placeholder="./img/succulents/echeveria-lotus.png" value="">
            </div>

            <div>
              <label for="images[0][alt]">Image Alt</label>
              <input type="text" id="images[0][alt]" name="images[0][alt]" placeholder="Echeveria" value="">
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>
  <div class="col">
    <input type="submit" value="submit">
  </div>


</form>
